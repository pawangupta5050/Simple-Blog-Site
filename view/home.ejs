<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-4">
            <div class="row row-cols-4 row-md-cols-2">
                <% blogs.forEach(blog=> { %>
                    <div class="col">
                        <div class="card" style="width: 18rem">
                            <img src='<%= blog.coverImageURL %>' class="card-img-top" style="height: 150px;" alt="...">
                            <div class="card-body">
                                <h5 class="card-title" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    <%= blog.title %>
                                </h5>
                                <p class="card-text" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    <%= blog.body %>
                                </p>
                                <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
        <%- include('./partials/scripts') %>
</body>

</html>